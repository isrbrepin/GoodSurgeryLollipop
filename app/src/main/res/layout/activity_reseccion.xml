<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="0dp"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <!-- Incluir el header reutilizable -->
    <include layout="@layout/activity_header_con_atras" />

    <TextView
        android:id="@+id/text_reseccion"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/pagactual2_sin_curvas_drawable"
        android:layout_height="@dimen/dimen_titulo"
        android:text="@string/enfermedad_de_crohn"
        android:textSize="22sp"
        android:textColor="@color/letras_oscuras"
        android:textStyle="bold" />

    <!-- Resto del contenido -->

    <Button
        android:id="@+id/btn_informacion_del_proceso"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_dimen"
        android:layout_marginTop="@dimen/margin_top_body"
        android:layout_marginEnd="@dimen/margin_laterales_body"
        android:layout_marginStart="@dimen/margin_laterales_body"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/body_buttons_dimens"
        android:text="@string/text_info_proceso"
        android:textColor="@color/letras_oscuras"
        app:strokeColor="@color/primary"
        app:strokeWidth="@dimen/stroke_body_drawable"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        android:translationZ="1dp"
        />

    <Button
        android:id="@+id/btn_preoperatorio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_dimen"
        android:layout_marginTop="@dimen/margin_top_body"
        android:layout_marginEnd="@dimen/margin_laterales_body"
        android:layout_marginStart="@dimen/margin_laterales_body"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/body_buttons_dimens"
        android:text="@string/text_preoperatorio"
        android:textColor="@color/letras_oscuras"
        app:strokeColor="@color/primary"
        app:strokeWidth="@dimen/stroke_body_drawable"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        android:translationZ="1dp"
        />

    <Button
        android:id="@+id/btn_postoperatorio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_dimen"
        android:layout_marginTop="@dimen/margin_top_body"
        android:layout_marginEnd="@dimen/margin_laterales_body"
        android:layout_marginStart="@dimen/margin_laterales_body"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/body_buttons_dimens"
        android:text="@string/text_postoperatorio"
        android:textColor="@color/letras_oscuras"
        app:strokeColor="@color/primary"
        app:strokeWidth="@dimen/stroke_body_drawable"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        android:translationZ="1dp"
        />

</LinearLayout>