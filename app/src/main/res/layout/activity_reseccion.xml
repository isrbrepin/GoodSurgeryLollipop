<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="0dp"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- Incluir el header reutilizable -->
    <include layout="@layout/activity_header" />

    <TextView
        android:id="@+id/text_reseccion"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/pagactual2_drawable"
        android:layout_height="@dimen/dimen_titulo"
        android:text="@string/text_reseccion"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Resto del contenido -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="100dp">
        <Button
            android:id="@+id/btn_informacion_del_proceso"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_body_buttons_dimen"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/body_buttons_dimens"
            android:text="@string/text_info_proceso"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="100dp">
        <Button
            android:id="@+id/btn_preoperatorio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_body_buttons_dimen"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/body_buttons_dimens"
            android:text="@string/text_preoperatorio"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="100dp">
        <Button
            android:id="@+id/btn_postoperatorio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_body_buttons_dimen"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/body_buttons_dimens"
            android:text="@string/text_postoperatorio"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>