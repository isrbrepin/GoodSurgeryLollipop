<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="0dp"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- Incluir el header reutilizable -->
    <include layout="@layout/activity_header" />


    <!-- Resto del contenido -->
    <TextView
        android:id="@+id/text_fistula"
        android:layout_width="match_parent"
        android:gravity="top|center"
        android:background="@drawable/pagactual2_drawable"
        android:layout_height="50dp"
        android:text="@string/fistula_anal"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:elevation="20dp"
        android:background="@drawable/pagactual_drawable"
        android:layout_height="50dp"
        android:text="@string/text_postoperatorio2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_body"
        android:layout_marginEnd="@dimen/margin_laterales_body"
        android:layout_marginStart="@dimen/margin_laterales_body"
        app:cardCornerRadius="100dp">
        <Button
            android:id="@+id/btn_al_alta"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_body_buttons_dimen"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/body_buttons_dimens"
            android:text="@string/text_alta"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_body"
        android:layout_marginEnd="@dimen/margin_laterales_body"
        android:layout_marginStart="@dimen/margin_laterales_body"
        app:cardCornerRadius="100dp">
        <Button
            android:id="@+id/btn_ostomia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_body_buttons_dimen"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/body_buttons_dimens"
            android:text="@string/text_ostomia"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>