<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="0dp"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- Incluir el header reutilizable -->
    <include layout="@layout/activity_header_con_atras" />

    <TextView
        android:id="@+id/text_colon"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/pagactual2_drawable"
        android:layout_height="@dimen/dimen_titulo"
        android:text="@string/polipo_colon"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_preoperatorio2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_subtitulo"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:background="@drawable/pagactual_drawable"
        android:gravity="center"
        android:text="@string/text_preoperatorio2"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:textStyle="bold" />

    <!-- Resto del contenido -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_pequeños_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_body"
        android:layout_marginEnd="@dimen/margin_laterales_body"
        android:layout_marginStart="@dimen/margin_laterales_body"
        app:cardCornerRadius="@dimen/dimen_radius_body">
        <Button
            android:id="@+id/btn_anestesia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_body_buttons_pequeños_dimen"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/body_buttons_dimens"
            android:text="@string/text_anestesia"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_pequeños_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_body"
        android:layout_marginEnd="@dimen/margin_laterales_body"
        android:layout_marginStart="@dimen/margin_laterales_body"
        app:cardCornerRadius="@dimen/dimen_radius_body">
        <Button
            android:id="@+id/btn_preparacion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_body_buttons_pequeños_dimen"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/body_buttons_dimens"
            android:text="@string/text_preparacion"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_pequeños_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_body"
        android:layout_marginEnd="@dimen/margin_laterales_body"
        android:layout_marginStart="@dimen/margin_laterales_body"
        app:cardCornerRadius="@dimen/dimen_radius_body">
        <Button
            android:id="@+id/btn_ingreso"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_body_buttons_pequeños_dimen"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/body_buttons_dimens"
            android:text="@string/text_ingreso"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_body_buttons_pequeños_dimen"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_body"
        android:layout_marginEnd="@dimen/margin_laterales_body"
        android:layout_marginStart="@dimen/margin_laterales_body"
        app:cardCornerRadius="@dimen/dimen_radius_body">
        <Button
            android:id="@+id/btn_hospital"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_body_buttons_pequeños_dimen"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/body_buttons_dimens"
            android:text="@string/text_hospital"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>